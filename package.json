{
  "name": "knab-james-frontend",
  "version": "0.0.3",
  "description": "Knab Verzekeren Web app (Codename James)",
  "author": "cXstudio",
  "keywords": [
    "angular",
    "webapp",
    "progressive",
    "knab"
  ],
  "scripts": {
    "config": "ts-node ./scripts/set-env.ts",
    "start": "npm run config -- --analytics=true && ng serve --open --locale",
    "build": "npm run config -- --analytics=true && ng build --locale --aot --build-optimizer --stats-json",
    "build:prod": "npm run config -- --environment=prod --analytics=true && ng build --prod --environment=prod --locale --build-optimizer --stats-json",
    "serve:prod": "ng serve --open --locale --prod",
    "serve:gtm": "npm run config -- --analytics=true && ng serve --open --locale --aot",
    "test:watch": "ng test --code-coverage --watch --sourcemaps=true",
    "test": "npm run config && ng test --code-coverage --single-run --sourcemaps=false",
    "test:phantomjs": "npm run config && ng test --code-coverage --single-run --sourcemaps=false --browsers 'PhantomJS'",
    "test:ci": "npm run config && ng test --code-coverage --watch=false",
    "doc:build": "compodoc -p src/tsconfig.app.json",
    "doc:serve": "compodoc -s",
    "doc:buildandserve": "compodoc -p src/tsconfig.app.json -s",
    "security": "retire -npv --exitwith 0 --proxy http://edc-proxy.ds.global:9090",
    "lint": "ng lint --type-check",
    "lint:styles": "stylelint 'src/**/*.scss' --syntax scss --config stylelint.conf.js",
    "release": "standard-version && git pushâ€Š--follow-tags origin master",
    "e2e": "ng e2e",
    "clean": "rimraf -- node_modules dist",
    "bundle-report": "webpack-bundle-analyzer dist/stats.json",
    "extract:copies": "ngx-translate-extract --input ./src --output ./src/assets/i18n/nl.json --clean --sort --format namespaced-json"
  },
  "husky": {
    "hooks": {
      "pre-commit": "commitlint -e && npm run lint:styles && npm run lint",
      "pre-push": "npm run build && npm run test:ci && npm run security && pkg-ok",
      "post-checkout": "./hooks/post-checkout $GIT_PARAMS",
      "post-merge": "./hooks/post-merge $GIT_PARAMS"
    }
  },
  "private": true,
  "dependencies": {
    "@angular/animations": "^4.4.5",
